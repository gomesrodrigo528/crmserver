# Variáveis de ambiente para produção no Render
# Copie estas variáveis para o painel do Render

# Ambiente
NODE_ENV=production
PORT=10000

# URLs de produção
FLASK_APP_URL=https://www.suaagenda.fun
FLASK_APP_URL_PRODUCTION=https://www.suaagenda.fun
WHATSAPP_API_URL_PRODUCTION=https://api.suaagenda.fun

# Configurações do servidor
CORS_ORIGIN=https://www.suaagenda.fun

# Configurações de segurança
SESSION_TIMEOUT=3600000
MAX_CONNECTIONS=10

# Configurações de upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=static/uploads/whatsapp

# Configurações de log
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configurações de cache
CACHE_TTL=300000
MAX_CACHE_SIZE=100

# Configurações de rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Configurações de health check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
